\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{strand}[1][]
{
  \vspace{3.5mm}
  \begin{beamercolorbox}[wd=\paperwidth,ht=1cm]{frametitle} 
  \begin{tikzpicture}
  \useasboundingbox(0,0) rectangle(\the\paperwidth,0);
  \fill[kingsred] (0.3,0) rectangle(\the\paperwidth-8,1.1);
  \node[anchor=west, white,font=\large] at (0.4,0.55){\insertframetitle};
  \end{tikzpicture}
  \end{beamercolorbox}
}


\defbeamertemplate*{footline}{strand theme}
{
  \leavevmode%
  \hbox{%
  \hspace{0.0075\paperwidth}
  \begin{beamercolorbox}[wd=.4\paperwidth,ht=2.75ex,dp=1.2ex,center]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.4\paperwidth,ht=2.75ex,dp=1.2ex,center]{subtitle in head/foot}%
  \usebeamerfont{subtitle in head/foot}\insertshortsubtitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.18\paperwidth,ht=2.75ex,dp=1.2ex,right]{date in head/foot}%
    \insertframenumber{} / \inserttotalframenumber\hspace*{4ex} 
  \end{beamercolorbox}}%
  \vspace{0.0075\paperwidth}
  \vskip0pt%
}



\mode<all>